REQUEST_REVIEW_MODE=remote
REQUEST_REVIEW_BOT_LOGIN=chatgpt-codex-connector[bot]
REQUEST_REVIEW_TRIGGER_COMMENT='@codex review'
REQUEST_REVIEW_POLL_INTERVAL_SECONDS=20
REQUEST_REVIEW_TIMEOUT_SECONDS=1800

REQUEST_REVIEW_LOCAL_PROFILE=local-review
REQUEST_REVIEW_LOCAL_OUTPUT_FILE=review.log
REQUEST_REVIEW_LOCAL_ERROR_FILE=review.err.log
REQUEST_REVIEW_LOCAL_KEEP_DEBUG_LOGS=0

# Recovery mode: set to 1 only when commit already exists (and may already be pushed).
# When enabled, request-review skips git add/commit and, in remote mode, skips git push.
REQUEST_REVIEW_USE_EXISTING_COMMIT=0

# Optional commit SHA/ref to review when REQUEST_REVIEW_USE_EXISTING_COMMIT=1.
# Defaults to HEAD if unset.
REQUEST_REVIEW_EXISTING_COMMIT_SHA=

# Optional: Disable reviews as needed
REQUEST_REVIEW_DISABLE=0